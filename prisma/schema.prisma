generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
/*
====================================
ENUMS
====================================
*/

enum UserRole {
  ADMIN
  OPERATOR
}

enum LoanStatus {
  ACTIVE        // al día
  OVERDUE       // en mora
  PAID          // totalmente pagado
  CANCELED      // anulado
}

enum LoanStructure {
  FRENCH_AMORTIZATION  // sistema francés (interés variable sobre saldo)
  FLAT_RATE            // cargo fijo desde el día 1
}

enum PaymentFrequency {
  DAILY
  WEEKLY
  BIWEEKLY
  MONTHLY
}

enum PaymentType {
  REGULAR
  CAPITAL_PAYMENT
  ADVANCE          // abono que cubre más de una cuota (Flat Rate)
  FULL_SETTLEMENT
}

enum ScheduleStatus {
  PENDING
  PAID
  OVERDUE
  ADVANCE_PAID
}

/*
====================================
MODELS
====================================
*/

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  role      UserRole @default(OPERATOR)
  active    Boolean  @default(true)

  createdLoans    Loan[] @relation("LoansCreated")
  updatedLoans    Loan[] @relation("LoansUpdated")
  payments        Payment[]
  auditLogs       AuditLog[]
  systemConfigs   SystemConfig[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Client {
  id         String  @id @default(uuid())
  firstName  String
  lastName   String?
  documentId String  @unique
  phone      String
  email      String?
  address    String?
  currency   String  @default("DOP")
  active     Boolean @default(true)

  loans Loan[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Loan {
  id                 String           @id @default(uuid())
  clientId           String

  // Estructura del préstamo
  loanStructure      LoanStructure    @default(FRENCH_AMORTIZATION)

  principalAmount    Decimal          @db.Decimal(12, 2)

  // Solo para FRENCH_AMORTIZATION (nullable — no aplica en Flat Rate)
  annualInterestRate Decimal?         @db.Decimal(5, 2)

  // Solo para FLAT_RATE
  totalFinanceCharge Decimal?         @db.Decimal(12, 2)
  totalPayableAmount Decimal?         @db.Decimal(12, 2)

  paymentFrequency   PaymentFrequency
  termCount          Int
  installmentAmount  Decimal          @db.Decimal(12, 2)
  remainingCapital   Decimal          @db.Decimal(12, 2)
  installmentsPaid   Int              @default(0)
  nextDueDate        DateTime?
  status             LoanStatus       @default(ACTIVE)
  guarantees         String?

  client          Client           @relation(fields: [clientId], references: [id])
  payments        Payment[]
  paymentSchedule PaymentSchedule[]

  createdById String
  updatedById String?

  createdBy User  @relation("LoansCreated", fields: [createdById], references: [id])
  updatedBy User? @relation("LoansUpdated", fields: [updatedById], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([clientId])
  @@index([status])
}

model Payment {
  id              String      @id @default(uuid())
  loanId          String
  paymentDate     DateTime    @default(now())
  totalAmount     Decimal     @db.Decimal(12, 2)
  capitalApplied  Decimal     @db.Decimal(12, 2)
  interestApplied Decimal     @db.Decimal(12, 2)
  lateFeeApplied  Decimal     @default(0) @db.Decimal(12, 2)
  installmentsCovered Int     @default(1)
  type            PaymentType

  loan            Loan            @relation(fields: [loanId], references: [id])
  paymentSchedule PaymentSchedule[]

  createdById String
  createdBy   User @relation(fields: [createdById], references: [id])

  createdAt DateTime @default(now())

  @@index([loanId])
}

model PaymentSchedule {
  id                String         @id @default(uuid())
  loanId            String
  installmentNumber Int
  dueDate           DateTime
  expectedAmount    Decimal        @db.Decimal(12, 2)
  principalExpected Decimal        @db.Decimal(12, 2)
  interestExpected  Decimal        @db.Decimal(12, 2)
  status            ScheduleStatus @default(PENDING)
  paidAt            DateTime?
  paymentId         String?

  loan    Loan     @relation(fields: [loanId], references: [id])
  payment Payment? @relation(fields: [paymentId], references: [id])

  createdAt DateTime @default(now())

  @@index([loanId])
  @@index([status])
}

enum LateFeeType {
  PERCENTAGE_DAILY   // % diario sobre el monto vencido
  FIXED              // monto fijo por cuota vencida
}

model SystemConfig {
  id                   String      @id @default("singleton")

  // Datos del negocio
  businessName         String      @default("Mi Negocio")
  rnc                  String?
  address              String?
  phone                String?
  email                String?

  // Parámetros de mora
  lateFeeType          LateFeeType @default(PERCENTAGE_DAILY)
  lateFeeValue         Decimal     @default(0) @db.Decimal(5, 2)
  gracePeriodDays      Int         @default(0)

  // Tasas de interés por defecto (pre-cargan el form de nuevo préstamo)
  defaultMonthlyRate   Decimal?    @db.Decimal(5, 2)
  defaultWeeklyRate    Decimal?    @db.Decimal(5, 2)
  defaultDailyRate     Decimal?    @db.Decimal(5, 2)

  updatedAt            DateTime    @updatedAt
  updatedById          String?
  updatedBy            User?       @relation(fields: [updatedById], references: [id])
}

model AuditLog {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  action     String   // CREATE_LOAN, REGISTER_PAYMENT, REVERSE_PAYMENT, etc.
  entity     String   // "Loan", "Payment", "Client"
  entityId   String   // el UUID del registro afectado
  details    Json?    // snapshot de los datos relevantes
  createdAt  DateTime @default(now())
}
